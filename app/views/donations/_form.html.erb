<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid-x grid-margin-x">
    <div class="small-6 cell">
      <%= f.label :amount %>
      <%= f.text_field :amount %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="small-6 cell">
      <%= f.label :recipient_name %>
      <%= f.text_field :recipient_name, class: "typeahead" %>
    </div>
    <script>instantiateRecipientsTypeahead();</script>
  </div>

  <div class="modal fade" id="newRecipientModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add new recipient</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          FIXME: add Add recipient stuff here!
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Add (also selects :))</button>
        </div>
      </div>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="small-6 cell">
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="small-6 cell">
      <%= f.label :method %>
      <%= f.select :method, Donation.method_select_options %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="small-6 cell">
      <%= f.label :status %>
      <%= f.select :status, Donation.status_select_options %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
