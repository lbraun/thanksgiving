<h1>Listing recipients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Donations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= link_to recipient.name, recipient %></td>
        <td><%= number_to_currency recipient.total_donations %></td>
        <td><%= link_to 'Show', recipient %></td>
        <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
        <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipient', new_recipient_path, class: 'button' %>
